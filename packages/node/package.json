{
	"name": "@ts-drp/node",
	"version": "0.11.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/drp-tech/ts-drp.git"
	},
	"type": "module",
	"types": "./dist/src/index.d.ts",
	"files": [
		"src",
		"dist",
		"!dist/test",
		"!**/*.tsbuildinfo"
	],
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"import": "./dist/src/index.js"
		}
	},
	"scripts": {
		"benchmark": "tsx tests/node.bench.ts | tee -a ../benchmark-output.txt",
		"build": "tsc -b tsconfig.build.json && node build.mjs",
		"clean": "rm -rf dist/ node_modules/",
		"cli": "tsx ./src/run.ts",
		"prebuild": "node -p \"'export const VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
		"prepack": "tsc -b",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"watch": "tsc -b -w"
	},
	"devDependencies": {
		"@ts-drp/test-utils": "0.11.0",
		"@types/benchmark": "^2.1.5",
		"benchmark": "^2.1.4",
		"tsx": "4.19.1",
		"vitest": "^3.0.5"
	},
	"dependencies": {
		"@bufbuild/protobuf": "^2.0.0",
		"@chainsafe/bls": "^8.1.0",
		"@chainsafe/libp2p-gossipsub": "^14.1.0",
		"@grpc/grpc-js": "^1.12.2",
		"@grpc/proto-loader": "^0.7.13",
		"@grpc/reflection": "^1.0.4",
		"@libp2p/crypto": "^5.0.5",
		"@libp2p/interface": "^2.1.3",
		"@libp2p/peer-id": "^5.0.14",
		"@multiformats/multiaddr": "^12.3.1",
		"@noble/hashes": "^1.7.1",
		"@noble/secp256k1": "^2.2.3",
		"@ts-drp/blueprints": "0.11.0",
		"@ts-drp/interval-discovery": "0.11.0",
		"@ts-drp/interval-reconnect": "0.11.0",
		"@ts-drp/interval-runner": "0.11.0",
		"@ts-drp/keychain": "0.11.0",
		"@ts-drp/logger": "0.11.0",
		"@ts-drp/network": "0.11.0",
		"@ts-drp/object": "0.11.0",
		"@ts-drp/tracer": "0.11.0",
		"@ts-drp/types": "0.11.0",
		"@ts-drp/utils": "0.11.0",
		"@ts-drp/message-queue": "0.11.0",
		"@ts-drp/validation": "0.11.0",
		"@types/node": "^24.0.7",
		"commander": "^13.0.0",
		"dotenv": "^16.4.5",
		"esbuild-plugins-node-modules-polyfill": "^1.7.0",
		"race-event": "^1.3.0",
		"uint8arrays": "^5.1.0"
	}
}
